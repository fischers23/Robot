<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Space
        android:layout_width="10dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/map_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="How do you want to drive today?"
        android:textColor="#000000"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageButton
            android:id="@+id/connect_wifidirect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/button_wifi" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <ImageButton
            android:id="@+id/connect_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="222dp"
            android:background="@null"
            android:src="@drawable/button_bt" />
        
                <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />
                
                        <ImageButton
            android:id="@+id/connect_ai"
            android:layout_width="wrap_content"
            android:layout_height="222dp"
            android:background="@null"
            android:src="@drawable/button_gps" />
                

    </LinearLayout>

</LinearLayout>
